pipeline {
    agent any

    parameters {
        string(name: 'inventory', defaultValue: 'dev', description: 'Environment to deploy to')
        string(name: 'tags', defaultValue: '', description: 'Ansible tags to run')
    }

    environment {
        ANSIBLE_CONFIG = "${WORKSPACE}/deploy/.ansible.cfg"
    }

    stages {
        stage('Initial Cleanup') {
            steps {
                dir("${WORKSPACE}") {
                    deleteDir()
                }
            }
        }

        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Munyat/ansible-config-mgt.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                ansiblePlaybook(
                    colorized: true,
                    credentialsId: 'github-personal-token',
                    disableHostKeyChecking: true,
                    installation: 'ansible',
                    inventory: "inventory/${params.inventory}.ini",
                    playbook: 'playbooks/site.yml',
                    tags: "${params.tags}"
                )
            }
        }
    }
}

